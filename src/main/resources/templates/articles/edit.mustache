{{>layouts/header}}

{{#article}} <!-- article 속성을 가진 변수들 사용하도록 설정 -->
<!-- form method는 get, post만 지원-->
<form class="container" action="/articles/update" method="post"> <!-- action : 어디로 보낼지 , method : 어떻게 보낼지-->
    <input name="id" type="hidden" value="{{id}}"/>
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title" value="{{title}}"> <!-- name : 폼데이터 변수명 지정 -->
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content" >{{content}}</textarea> <!-- name : 폼데이터 변수명 지정 -->
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/articles/{{id}}">Back</a> <!--  수정하려 했던 id Artilce로 다시 돌아가는 a태크 링크 -->
</form>
{{/article}}

{{>layouts/footer}}